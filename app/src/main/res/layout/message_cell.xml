<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/chat_cell_linear_layout"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/message_cell_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lior Hazael"
            android:textColor="#000"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_cell_body_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_message"
            android:elevation="2dp"
            android:padding="10dp"
            android:text="Placeholder message"
            android:textColor="#fff"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="3dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/message_cell_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:04"
                android:textColor="#000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/message_cell_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="12/06/2020"
                android:textColor="#000"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>